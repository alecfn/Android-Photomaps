<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/placesListConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alecforbes.photomapapp.Activities.PlacesList">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/placeNestedScoll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/placeLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/worldCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|center"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:clipToPadding="false"
                app:cardCornerRadius="4dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/worldText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The World"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/worldButton"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:adjustViewBounds="true"
                        android:padding="0dp"
                        app:srcCompat="@drawable/world" />

                    <TextView
                        android:id="@+id/worldDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Explore well known landmarks from all over the world!" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ausBigCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|center"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:clipToPadding="false"
                app:cardCornerRadius="4dp"
                app:cardElevation="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ausBigText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Australia Big Things"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/ausBigButton"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:adjustViewBounds="true"
                        android:padding="0dp"
                        app:srcCompat="@drawable/banana" />

                    <TextView
                        android:id="@+id/ausBigDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Explore Australia's rich culture of having unnecessarily big objects in small rural towns." />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/newYorkCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|center"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:clipToPadding="false"
                app:cardCornerRadius="4dp"
                app:cardElevation="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/newYorkText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New York"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/newYorkButton"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:adjustViewBounds="true"
                        android:padding="0dp"
                        app:srcCompat="@drawable/newyork" />

                    <TextView
                        android:id="@+id/newyorkDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Explore landmarks from New York, like the Empire State building, Statue of Liberty and One World Trade Centre." />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/londonCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|center"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:clipToPadding="false"
                app:cardCornerRadius="4dp"
                app:cardElevation="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/londonText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="London"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/londonButton"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:adjustViewBounds="true"
                        android:padding="0dp"
                        app:srcCompat="@drawable/london" />

                    <TextView
                        android:id="@+id/londonDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Explore London landmarks like the Tower of London, the London Eye and Westminster Parliament house." />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/sydneyCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|center"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:clipToPadding="false"
                app:cardCornerRadius="4dp"
                app:cardElevation="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sydneyDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Explore Sydney landmarks like the Opera House, Harbour bridge and the State Parliament" />

                    <ImageButton
                        android:id="@+id/sydneyButton"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:adjustViewBounds="true"
                        android:padding="0dp"
                        app:srcCompat="@drawable/sydney" />

                    <TextView
                        android:id="@+id/sydneyText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sydney"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
