<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alecforbes.photomapapp.Activities.MainActivity">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/mainLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/createCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|center"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:clipToPadding="false"
                app:cardCornerRadius="4dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/createPhotomapTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/custom_photomap_title"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/createPhotomapImage"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:adjustViewBounds="true"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/custom_map" />

                    <TextView
                        android:id="@+id/createPhotomapText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/create_a_custom_photomap"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/createPhotomapButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/button_create"
                        android:theme="@style/PrimaryFlatButton" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/createPlaceCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|center"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:clipToPadding="false"
                app:cardCornerRadius="4dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/placesPhotomapTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/places_title"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/placesPhotomapImage"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:adjustViewBounds="true"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/places_map" />

                    <TextView
                        android:id="@+id/placesText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/places_photomaps"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/createPlacesButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/create"
                        android:theme="@style/PrimaryFlatButton" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/savedCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|center"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:clipToPadding="false"
                app:cardCornerRadius="4dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/savedPhotomapTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/saved_title"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/savedPhotomapImage"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:adjustViewBounds="true"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/saved_map" />

                    <TextView
                        android:id="@+id/savedPhotomapsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/saved_photomaps"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/savedPhotomapButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/view"
                        android:theme="@style/PrimaryFlatButton" />
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
